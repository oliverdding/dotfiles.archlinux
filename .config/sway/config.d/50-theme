# Wallpaper
output * bg ~/Pictures/background.jpg fill

# Cursor
seat * xcursor_theme Bibata-Modern-Ice 32

# Windows
default_border pixel 2
for_window [class=".*"] border pixel 2
default_floating_border none

titlebar_padding 1
titlebar_border_thickness 0

smart_gaps off
smart_borders on
default_border pixel 3

gaps outer 5 
gaps inner 10
gaps bottom 1
gaps top 1

# Gnome theme
exec_always {
    gsettings set org.gnome.desktop.interface gtk-theme 'Graphite-Dark-nord'
    gsettings set org.gnome.desktop.interface icon-theme 'Tela-nord-dark'
    gsettings set org.gnome.desktop.interface cursor-theme 'Bibata-Modern-Ice'
    gsettings set org.gnome.desktop.interface cursor-size '32'
}
